---
/**
 * ═══════════════════════════════════════════════════════════
 * MAIN LAYOUT — LYRIX OS
 * Unified <head> with the single SEO.astro engine.
 * ═══════════════════════════════════════════════════════════
 */

import '../styles/global.css';
import { t } from '../i18n/utils';
import type { Lang } from '../i18n/ui';
import SEO from '../components/SEO.astro';
import { AstroFont } from 'astro-font';

interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  keywords?: string;
	canonicalPath?: string;
  children?: unknown;
}

const {
  lang = 'en',
  title,
  description,
  keywords,
	canonicalPath,
} = Astro.props;

const resolvedTitle = title ?? t(lang, 'meta.title');
const resolvedDescription = description ?? t(lang, 'meta.description');
---

<html lang={lang} dir="ltr" translate="no" class="notranslate">
	<head>
    {/* ─── HARD LOCK TRANSLATION (Nuclear Option) ─── */}
    <script is:inline>
      document.documentElement.setAttribute('translate', 'no');
    </script>

		<!-- ═══ CORE META ═══ -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={resolvedDescription} />
		<meta name="generator" content={Astro.generator} />
    <meta name="google" content="notranslate" />
		<title>{resolvedTitle}</title>

		<!-- ═══ CRITICAL PRECONNECTS — before any font requests ═══ -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- ═══ FONT ENGINE (astro-font: auto @font-face + swap + size-adjust fallbacks) ═══ -->
		<!-- preload:false globally — we hand-pick the 2 LCP-critical files below -->
		<AstroFont
			config={[
				{
					name: 'Oswald',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-oswald',
				},
				{
					name: 'Barlow Condensed',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-barlow',
				},
				{
					name: 'Inter',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-inter',
				},
			]}
		/>
		<!-- LCP-critical preload: Oswald 700 (hero headline) -->
		<link
			rel="preload"
			href="https://fonts.gstatic.com/s/oswald/v57/TK3IWkUHHAIjg75cFRf3bXL8LICs1_Fv40pKlN4NNSeSASz7FmlWHYjMdZwl.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<!-- ═══ SEO ENGINE (Canonical, Hreflang, OG, Twitter, JSON-LD) ═══ -->
		<SEO
			lang={lang}
			title={resolvedTitle}
			description={resolvedDescription}
			keywords={keywords}
			canonicalPath={canonicalPath}
		/>

		<!-- ═══ CRITICAL CSS: Above-the-fold styles inlined to eliminate render-blocking ═══ -->
		<style is:inline>
			/* CLS Prevention: Reserve space for Hero content before hydration */
			.hero-headline-container {
				min-height: 72px; /* Mobile fallback */
			}
			@media (min-width: 640px) { .hero-headline-container { min-height: 84px; } }
			@media (min-width: 768px) { .hero-headline-container { min-height: 110px; } }
			@media (min-width: 1024px) { .hero-headline-container { min-height: 84px; } }

			/* Compositor-optimized pulse animation (transform + opacity only) */
			@keyframes pulse-compositor {
				0%, 100% { opacity: 0.6; transform: scale(1); }
				50% { opacity: 1; transform: scale(1.02); }
			}
			.animate-pulse-perf {
				animation: pulse-compositor 2s ease-in-out infinite;
				will-change: opacity, transform;
			}

			/* Critical above-the-fold background — prevents white flash */
			html { background-color: #050505; }
			body { background-color: #050505; color: #ffffff; min-height: 100vh; }
		</style>

		<!-- ═══ Extra head content from child pages ═══ -->
		<slot name="head" />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>
