---
/**
 * ═══════════════════════════════════════════════════════════
 * MAIN LAYOUT — LYRIX OS
 * Unified <head> with the single SEO.astro engine.
 * ═══════════════════════════════════════════════════════════
 */

import '../styles/global.css';
import { t } from '../i18n/utils';
import type { Lang } from '../i18n/ui';
import SEO from '../components/SEO.astro';
import { AstroFont } from 'astro-font';

interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  keywords?: string;
  children?: unknown;
}

const {
  lang = 'en',
  title,
  description,
  keywords,
} = Astro.props;

const resolvedTitle = title ?? t(lang, 'meta.title');
const resolvedDescription = description ?? t(lang, 'meta.description');
---

<html lang={lang} dir="ltr">
	<head>
		<!-- ═══ CORE META ═══ -->
		<meta charSet="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={resolvedDescription} />
		<meta name="generator" content={Astro.generator} />
		<title>{resolvedTitle}</title>

		<!-- ═══ FONT ENGINE (astro-font: auto @font-face + swap + size-adjust fallbacks) ═══ -->
		<!-- preload:false globally — we hand-pick the 2 LCP-critical files below -->
		<AstroFont
			config={[
				{
					name: 'Oswald',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-oswald',
				},
				{
					name: 'Barlow Condensed',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-barlow',
				},
				{
					name: 'Inter',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-inter',
				},
			]}
		/>
		<!-- LCP-critical preloads: only Oswald 700 + Inter 400 (latin) -->
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="preload"
			href="https://fonts.gstatic.com/s/oswald/v57/TK3IWkUHHAIjg75cFRf3bXL8LICs1_Fv40pKlN4NNSeSASz7FmlWHYjMdZwl.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="https://fonts.gstatic.com/s/inter/v20/UcC73FwrK3iLTeHuS_nVMrMxCp50SjIa1ZL7W0Q5nw.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<!-- ═══ SEO ENGINE (Canonical, Hreflang, OG, Twitter, JSON-LD) ═══ -->
		<SEO lang={lang} title={resolvedTitle} description={resolvedDescription} keywords={keywords} />

		<!-- ═══ CLOUDFLARE TURNSTILE (explicit render — activated by ContactModal) ═══ -->
		<script type="module">
			const script = document.createElement('script');
			script.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit';
			script.async = true;
			script.defer = true;
			document.head.appendChild(script);
		</script>

		<!-- Clarity tracking code for https://lyrixdigital.com/ -->
		<script>
			(function (c, l, a, r, i, t, y) {
				c[a] = c[a] || function () {
					(c[a].q = c[a].q || []).push(arguments);
				};
				t = l.createElement(r);
				t.async = 1;
				t.src = 'https://www.clarity.ms/tag/' + i + '?ref=bwt';
				y = l.getElementsByTagName(r)[0];
				y.parentNode.insertBefore(t, y);
			})(window, document, 'clarity', 'script', 'velb6q3rob');
		</script>

		<!-- ═══ Extra head content from child pages ═══ -->
		<slot name="head" />
	</head>
	<body className="antialiased">
		<slot />
	</body>
</html>
