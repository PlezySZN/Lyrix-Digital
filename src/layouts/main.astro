---
/**
 * ═══════════════════════════════════════════════════════════
 * MAIN LAYOUT — LYRIX OS
 * Unified <head> with the single SEO.astro engine.
 * ═══════════════════════════════════════════════════════════
 */

import '../styles/global.css';
import { t } from '../i18n/utils';
import type { Lang } from '../i18n/ui';
import SEO from '../components/SEO.astro';

interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  keywords?: string;
  children?: unknown;
}

const {
  lang = 'en',
  title,
  description,
  keywords,
} = Astro.props;

const resolvedTitle = title ?? t(lang, 'meta.title');
const resolvedDescription = description ?? t(lang, 'meta.description');
---

<html lang={lang} dir="ltr">
	<head>
		<!-- ═══ CORE META ═══ -->
		<meta charSet="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={resolvedDescription} />
		<link rel="icon" type="image/svg+xml" href="../favicon.svg" />
		<link rel="icon" href="../favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{resolvedTitle}</title>

		<!-- ═══ SEO ENGINE (Canonical, Hreflang, OG, Twitter, JSON-LD, Preconnect) ═══ -->
		<SEO lang={lang} title={resolvedTitle} description={resolvedDescription} keywords={keywords} />

		<!-- ═══ GOOGLE FONTS (non-blocking via preconnect in SEO) ═══ -->
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Oswald:wght@400;500;600;700&display=swap"
		/>

		<!-- ═══ CLOUDFLARE TURNSTILE (explicit render — activated by ContactModal) ═══ -->
		<script type="module">
			const script = document.createElement('script');
			script.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit';
			script.async = true;
			script.defer = true;
			document.head.appendChild(script);
		</script>

		<!-- ═══ Extra head content from child pages ═══ -->
		<slot name="head" />
	</head>
	<body className="antialiased">
		<slot />
	</body>
</html>
