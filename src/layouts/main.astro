---
/**
 * ═══════════════════════════════════════════════════════════
 * MAIN LAYOUT — LYRIX OS
 * Unified <head> with the single SEO.astro engine.
 * ═══════════════════════════════════════════════════════════
 */

import '../styles/global.css';
import { t } from '../i18n/utils';
import type { Lang } from '../i18n/ui';
import SEO from '../components/SEO.astro';
import Footer from '../components/Footer.astro';
import { AstroFont } from 'astro-font';

interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  keywords?: string;
	canonicalPath?: string;
  type?: 'website' | 'article' | 'service';
  article?: {
    headline: string;
    datePublished: string;
    dateModified?: string;
    author: string;
    authorUrl?: string;
    section?: string;
    tags?: string[];
    wordCount?: number;
  };
  image?: string;
  children?: unknown;
}

const {
  lang = 'en',
  title,
  description,
  keywords,
	canonicalPath,
  type,
  article,
  image,
} = Astro.props;

/* ─── SEO Title Engine ───
   Pattern: [Page Title] | Lyrix Digital
   Homepage: uses i18n default (keyword-first, brand last)
   Subpages: appends brand; drops suffix if >60 chars */
const BRAND = 'Lyrix Digital';
const MAX_TITLE_LENGTH = 60;

const rawTitle = title
  ? (title.includes(BRAND) ? title : `${title} | ${BRAND}`)
  : t(lang, 'meta.title');

// Homepage i18n defaults are hand-crafted — used verbatim.
// Subpages: if brand suffix pushes past 60 chars, drop it.
const resolvedTitle = !title
  ? rawTitle
  : rawTitle.length <= MAX_TITLE_LENGTH
    ? rawTitle
    : (title.length <= MAX_TITLE_LENGTH ? title : rawTitle.slice(0, MAX_TITLE_LENGTH - 1) + '\u2026');

const resolvedDescription = description ?? t(lang, 'meta.description');

/* ─── Description length guard (≤155 chars for full SERP display) ─── */
const MAX_DESC_LENGTH = 155;
const safeDescription = resolvedDescription.length <= MAX_DESC_LENGTH
  ? resolvedDescription
  : resolvedDescription.slice(0, MAX_DESC_LENGTH - 1) + '\u2026';
---

<html lang={lang} dir="ltr" translate="no" class="notranslate">
	<head>
		<!-- ═══ CORE META ═══ -->
		<meta charset="utf-8" />

		<!-- ═══ FAVICONS (first after charset for GoogleFavicon bot) ═══ -->
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="icon" href="/favicon-96x96.png" type="image/png" sizes="96x96" />
		<link rel="icon" href="/favicon.ico" sizes="48x48" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
		<link rel="manifest" href="/site.webmanifest" />
		<meta name="theme-color" content="#050505" />

		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={safeDescription} />
		<meta name="generator" content={Astro.generator} />
		<meta name="google" content="notranslate" />
		<title>{resolvedTitle}</title>

		<!-- ═══ CRITICAL PRECONNECTS — fonts + analytics ═══ -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

		<!-- ═══ FONT ENGINE (astro-font: auto @font-face + swap + size-adjust fallbacks) ═══ -->
		<!-- preload:false globally — we hand-pick the 2 LCP-critical files below -->
		<AstroFont
			config={[
				{
					name: 'Oswald',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Oswald:wght@700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-oswald',
				},
				{
					name: 'Inter',
					src: [],
					googleFontsURL: 'https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap',
					preload: false,
					display: 'swap',
					fallback: 'sans-serif',
					cssVariable: 'font-inter',
				},
			]}
		/>
		<!-- LCP-critical preload: Oswald 700 (hero headline) -->
		<link
			rel="preload"
			href="https://fonts.gstatic.com/s/oswald/v57/TK3IWkUHHAIjg75cFRf3bXL8LICs1_Fv40pKlN4NNSeSASz7FmlWHYjMdZwl.woff2"
			as="font"
			type="font/woff2"
			crossorigin
			fetchpriority="high"
		/>

		<!-- ═══ SEO ENGINE (Canonical, Hreflang, OG, Twitter, JSON-LD) ═══ -->
		<SEO
			lang={lang}
			title={resolvedTitle}
			description={safeDescription}
			keywords={keywords}
			canonicalPath={canonicalPath}
			type={type}
			article={article}
			image={image}
		/>

		<!-- ═══ CRITICAL CSS: Above-the-fold styles inlined to eliminate render-blocking ═══ -->
		<style is:inline>
			/* CLS Prevention: Reserve space for Hero content before hydration */
			.hero-headline-container {
				min-height: 72px; /* Mobile fallback */
			}
			@media (min-width: 640px) { .hero-headline-container { min-height: 84px; } }
			@media (min-width: 768px) { .hero-headline-container { min-height: 110px; } }
			@media (min-width: 1024px) { .hero-headline-container { min-height: 84px; } }

			/* Compositor-optimized pulse animation (transform + opacity only) */
			@keyframes pulse-compositor {
				0%, 100% { opacity: 0.6; transform: scale(1); }
				50% { opacity: 1; transform: scale(1.02); }
			}
			.animate-pulse-perf {
				animation: pulse-compositor 2s ease-in-out infinite;
				will-change: opacity, transform;
			}

			/* Particle trail fade — replaces Framer Motion AnimatePresence */
			@keyframes particle-fade {
				from { opacity: 0.8; transform: scale(1); }
				to   { opacity: 0;   transform: scale(0.2); }
			}
			.animate-particle-fade {
				animation: particle-fade 0.6s ease-out forwards;
			}

			/* Critical above-the-fold background — prevents white flash */
			html { background-color: #050505; }
			body { background-color: #050505; color: #ffffff; min-height: 100vh; }
		</style>

		<!-- ═══ GA4 — Deferred loading (3s after page idle) ═══ -->
		<!-- Lazy-loads gtag.js to keep it off the critical path.
		     Eliminates ~150KB from FCP/LCP and avoids deprecated API warnings
		     (SharedStorage, Fledge) from blocking initial render. -->
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			window.gtag = gtag;
			// Queue the config immediately so events before load are buffered
			gtag('js', new Date());
			gtag('config', 'G-9S6JHDLHVB', { send_page_view: true });
			// Lazy-load the gtag.js library after 3s idle
			(function(){
				function loadGA(){
					if(document.querySelector('script[src*="gtag/js"]'))return;
					var s=document.createElement('script');
					s.src='https://www.googletagmanager.com/gtag/js?id=G-9S6JHDLHVB';
					s.async=true;
					s.fetchPriority='low';
					document.head.appendChild(s);
				}
				if(typeof requestIdleCallback==='function'){
					setTimeout(function(){requestIdleCallback(loadGA);},3000);
				}else{
					setTimeout(loadGA,3500);
				}
			})();
		</script>

		<!-- ═══ Extra head content from child pages ═══ -->
		<slot name="head" />
	</head>
	<body class="antialiased">
		<!-- ═══ Skip-to-content (WCAG 2.1 AA) ═══ -->
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:fixed focus:top-2 focus:left-2 focus:z-9999 focus:px-4 focus:py-2 focus:bg-[#CCFF00] focus:text-[#0a0a0a] focus:font-bold focus:text-sm focus:rounded focus:outline-none focus:ring-2 focus:ring-[#CCFF00]/50"
		>
			{lang === 'es' ? 'Saltar al contenido' : 'Skip to content'}
		</a>

		<slot />

		<!-- ═══ SITE FOOTER ═══ -->
		<Footer lang={lang} />

	</body>
</html>
