---
/**
 * ═══════════════════════════════════════════════════════════
 * PRIVACY POLICY — LYRIX OS
 * Bilingual (EN/ES) privacy policy page.
 * Route: /en/privacy/ and /es/privacy/
 * ═══════════════════════════════════════════════════════════
 */

import { getLangFromUrl } from '../../i18n/utils';
import type { Lang } from '../../i18n/ui';
import Layout from '../../layouts/main.astro';

export function getStaticPaths() {
	return [
		{ params: { lang: 'en' } },
		{ params: { lang: 'es' } },
	];
}

const lang = getLangFromUrl(Astro.url) as Lang;

const pageTitle = lang === 'es'
	? 'Política de Privacidad'
	: 'Privacy Policy';

const pageDesc = lang === 'es'
	? 'Cómo Lyrix Digital recopila, usa y protege tu información personal. Política vigente desde febrero 2026.'
	: 'How Lyrix Digital collects, uses, and protects your personal information. Policy effective February 2026.';

const backLabel = lang === 'es' ? '← Volver al Inicio' : '← Back to Home';
const backHref = lang === 'es' ? '/es/' : '/';
const termsHref = `/${lang}/terms/`;
const termsLabel = lang === 'es' ? 'Términos de Servicio' : 'Terms of Service';
---

<Layout lang={lang} title={pageTitle} description={pageDesc}>
	<main id="main-content" class="min-h-screen bg-lyrix-dark pt-20 pb-16 px-4 md:px-8">
		<article class="max-w-3xl mx-auto">

			{/* ─── BACK LINK ─── */}
			<a href={backHref} class="inline-flex items-center gap-2 mb-8 text-sm font-mono text-white/40 hover:text-[#CCFF00] transition-colors duration-200">
				{backLabel}
			</a>

			{/* ─── HEADER ─── */}
			<header class="mb-12 pb-8 border-b border-white/5">
				<div class="inline-flex items-center gap-2 mb-4 px-3 py-1.5 rounded-lg bg-white/5 border border-white/10">
					<span class="text-xs font-mono font-bold text-white/60 uppercase tracking-widest">LEGAL</span>
				</div>
				<h1 class="text-3xl md:text-4xl font-bold text-white tracking-tight mb-2 font-(family-name:--font-oswald) uppercase">
					{lang === 'es' ? 'POLÍTICA DE PRIVACIDAD' : 'PRIVACY POLICY'}
				</h1>
				<p class="text-sm text-white/30 font-mono">
					{lang === 'es' ? 'Vigente desde: 11 de febrero de 2026' : 'Effective: February 11, 2026'}
				</p>
			</header>

			{/* ═══════════════════════════════════════════════
			     ENGLISH CONTENT
			═══════════════════════════════════════════════ */}
			{lang === 'en' && (
				<div class="prose-lyrix">

					<p>
						<strong>Lyrix Digital</strong> ("we," "us," or "our") operates the website
						<a href="https://lyrixdigital.com">lyrixdigital.com</a>. This Privacy Policy explains how
						we collect, use, and protect your information when you visit our site or submit an inquiry
						through our contact form.
					</p>

					<h2>1. Information We Collect</h2>

					<h3>a. Information You Provide</h3>
					<p>When you use our contact form, we may collect:</p>
					<ul>
						<li>Full name</li>
						<li>Email address</li>
						<li>Phone number (optional)</li>
						<li>Business sector</li>
						<li>Project budget range</li>
						<li>Service preferences (web, video, maintenance)</li>
						<li>Your message</li>
					</ul>

					<h3>b. Information Collected Automatically</h3>
					<p>We use Google Analytics (via Google Tag Manager, loaded off the main thread) to collect:</p>
					<ul>
						<li>IP address (anonymized)</li>
						<li>Browser type and version</li>
						<li>Device type and screen size</li>
						<li>Pages visited and time spent</li>
						<li>Referral source</li>
						<li>Approximate geographic location (city level)</li>
					</ul>

					<h2>2. How We Use Your Information</h2>
					<ul>
						<li>To respond to your inquiries and provide project estimates</li>
						<li>To analyze site usage and improve the user experience</li>
						<li>To ensure site security via Cloudflare services</li>
					</ul>
