---
/**
 * ═══════════════════════════════════════════════════════════
 * LYRIX OS — LANDING PAGE (i18n)
 * Dark Mode Operating System Aesthetic
 * Route: /es/ or /en/
 * ═══════════════════════════════════════════════════════════
 */

import { getLangFromUrl } from '../../i18n/utils';
import type { Lang } from '../../i18n/ui';
import Layout from '../../layouts/main.astro';
import Hero from '../../components/Hero.astro';
import Services from '../../components/sections/Services.astro';
import Portfolio from '../../components/sections/Portfolio.astro';
import Process from '../../components/sections/Process.astro';
import Reviews from '../../components/sections/Reviews.astro';
import FAQ from '../../components/sections/FAQ.astro';
import CTA from '../../components/sections/CTA.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } },
  ];
}

const lang = getLangFromUrl(Astro.url) as Lang;

const keywords = lang === 'es'
  ? 'diseño web puerto rico, desarrollo web PR, agencia digital puerto rico, creación de páginas web, web design san juan, producción video drone PR, SEO puerto rico, marketing digital PR'
  : 'web design puerto rico, web development PR, digital agency puerto rico, website creation, web design san juan, drone video production PR, SEO puerto rico, digital marketing PR';
---

<Layout lang={lang} keywords={keywords}>
	<!-- Banner landmark (implicit role="banner" as direct child of <body>) -->
	<Hero lang={lang} />

	<main id="main-content">
		<Portfolio lang={lang}/>
		<Services lang={lang}/>
		<Reviews lang={lang}/>
		<Process lang={lang}/>
		<FAQ lang={lang}/>
		<CTA lang={lang}/>
	</main>
</Layout>
